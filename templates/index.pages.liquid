{% assign card_pages = site.pages['/'].children_in_nav_menu  | limit: 24 %}

<main class="flex flex-row min-h-screen bg-gray-100">

  {% if site.settings.is_allow_aside %}
    {%# render 'aside', page: page %}
  {% endif  %}

  <div class="flex-1">

    <section class="flex flex-col  min-h-screen justify-between">
      {% render 'header', page: page %}

      <div class="mx-auto max-w-screen-2xl"> 
        <div class="px-6 pt-4 bg-transparent xl:pt-12 xl:px-12">
          <nav class="flex justify-between mx-auto">
            <div class="flex items-center space-x-4 divide-x-2 divide-gray-200">
              <span class="text-2xl sm:text-3xl lg:text-4xl font-semibold text-gray-800">
                {{ page.settings.slogan | default: 'Frequently Asked Questions' }}
              </span>
              <div class="items-center hidden pl-4 space-x-2 text-sm md:flex">
                {{ page.settings.description | default: '' }}
              </div>
            </div>
          </nav>
        </div>
        <div class="px-6 py-8 mx-auto space-y-6 xl:px-12">
          <div class="flex flex-col space-y-6 lg:space-y-0 lg:space-x-6 lg:flex-row">
            <div class="flex-1">
              <div class="flex items-center justify-between space-x-4">
                {% form_tag 'search', class: 'relative flex-1' %}
                  <input type="text" name="{{form.keywords_field_name}}" value="{{ search.keywords | escape_once }}"
                    placeholder="{{ "placeholders.search" | t }}"
                    class="block w-full py-3 pl-12 placeholder-gray-400 transition-colors duration-300 border-0 border-transparen peer focus:border-transparent ring-transparent focus:ring-transparent focus:ring-opacity-80  text-sm">
                  <button
                    class="absolute flex items-center justify-center w-8 h-8 p-1 text-gray-600 transition-all duration-300 bg-transparent rounded-full left-3 top-2 hover:bg-gray-100 peer-focus:text-blue-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24"
                      stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                  </button>
                  {% endform_tag %}
              </div>
              <div class="grid flex-1 gap-6 mt-6 sm:grid-cols-2 xl:grid-cols-3">
                {% for item in card_pages %}
                  {% assign sub_pages_count = item.pages | size %}
                  {% assign desc = item.settings.content | truncate: 70 | strip_html  %}
                  <a href="{{ item.path }}"
                    class="flex items-start justify-between px-4 pt-6 pb-3 transition-all duration-300 bg-white rounded-md shadow-sm shadow-gray-200 hover:-translate-y-1 hover:shadow-md ">
                    <div class="flex items-start space-x-4">
                      <div class="flex items-center justify-center w-12 h-12 text-primary bg-gray-100 rounded-md md:w-16 md:h-16">
                        {% if item.settings.icon %}
                          <img src="{{ item.settings.icon | default: default_icon }}" class="h-10"/> 
                        {% else %}
                          <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10" fill="none" viewBox="0 0 24 24"
                          stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                          </svg>
                        {% endif %}
                      </div>
                      <div class="flex-1">
                        <span class="font-semibold text-gray-800">{{ item.link_text }}</span>
                        <span class="block mt-1 text-sm text-gray-700">{{ sub_pages_count }} Articles</span>
                        <span class="block mb-3 text-sm text-gray-600">{{ item.settings.description |  default: desc }}</span>
                      </div>
                    </div>
                  </a>
                {% endfor %}
              </div>
            </div>
            <div class="w-full space-y-6 lg:w-72 2xl:w-96 ">
              {% if site.settings.features_one %}
                {{ site.settings.features_one }}
              {% else %}
                <div class="px-4 pt-6 pb-8 space-y-4 bg-white rounded-md shadow-sm shadow-gray-200 lg:px-6 lg:pt-6 lg:pb-10">
                  <h4 class="text-base font-semibold text-gray-800 ">Features One</h4>
                  <div class="space-y-4">
                    <a href="#" class="flex items-center space-x-2 text-sm font-semibold text-blue-600 hover:underline">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4">
                        </path>
                      </svg>
                      <span>
                        be@diakobo.mk
                      </span>
                    </a>
                    <a href="#" class="flex items-center space-x-2 text-sm font-semibold text-blue-600 hover:underline">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z">
                        </path>
                      </svg>
                      <span>
                        (955) 348-3368
                      </span>
                    </a>
                    <span class="flex items-center space-x-2 text-sm font-semibold text-blue-600">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                      </svg>
                      <span>
                        Start a chat
                      </span>
                    </span>
                    <span class="flex items-center space-x-2 text-sm font-semibold text-blue-600">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                      <span>
                        Support on location
                      </span>
                    </span>
                  </div>
                </div>
              {% endif %}
              {% render 'popular_pages', page: page %}
            </div>
          </div>
        </div>
      </div>
    
      {% render 'footer' %}
    </section>
  </div>
</main>

{% schema %}
  {
    "name": "Knowledge Pages",
    "description": "Knowledge center with pages",
    "thumb_url": "images/theme/knowledge-page.png",
    "preview_image_urls": [
      "images/theme/knowledge-page.png"
    ],
    "sub_page_templates": ["page"],
    "settings": [
        {
          "id": "description",
          "type": "text",
          "label": "t:settings_schema.generic.settings.description.label",
          "default": "ðŸ‘‹ What Can We Help?"
        },
        {
          "id": "copyright_info",
          "type": "text",
          "label": "t:settings_schema.generic.settings.copyright_info.label",
          "default": "t:settings_schema.generic.settings.copyright_info.default"
        }
      ]
  }
{% endschema %}
